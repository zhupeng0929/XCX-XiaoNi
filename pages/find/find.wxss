view {
  border-radius: 0px;
  background-color: white;
}

.find-container {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  padding-bottom: 60px;
}

.userimg {
  width: 100rpx;
  height: 100rpx;
  margin: 10rpx;
  border-radius: 100%;
}

.user_2 {
  display: flex;
  flex-direction: column;
  line-height: 50rpx;
  margin-top: 8rpx;
}

.username {
  font-size: 28rpx;
  font-weight: 500;
}

.content {
  font-size: 30rpx;
  font-weight: 600;
}

.usermotto {
  font-size: 12px;
  color: #999;
}

.time {
  font-size: 25rpx;
  color: #999;
  padding-right: 20rpx;
  padding-top: 30rpx;
}

.findtools-view {
  height: 45px;
  background-color: black;
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.find-action-view {
  display: flex;
  flex-direction: row;
  text-align: center;
  background-color: black;
  justify-content: space-around;
  width:20%;

}

.find-action-view text {
  font-size: 13px;
  color: white;
}

.find-action-view image {
  width: 15px;
  height: 15px;
}

.find-action-line {
  border: solid;
  border-color: #fff;
  border-left-width: 1px;
  border-right-width: 0px;
  height: 22px;
}
