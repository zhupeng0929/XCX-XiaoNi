.top-tab {
  font-size: 13px;
  z-index: 9999;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  border-top: 1px solid #f5f5f5;
  width: 100%;
  position: fixed;
  top: 0;
  background-color: white;
}

.top-tab .top-tab-item {
  /*display: inline-block;*//*width: 16%;*/
  flex-grow: 1;
  height: 35px;
  line-height: 35px;
  text-align: center;
  width: 30px;
  margin: 0 20px;
}

.top-tab-item.active {
  border-bottom: 2px solid red;
  color: #ff4200;
}

.swiper {
  display: block;
  overflow: hidden;
  margin: 7px;
  border: 0;
  margin-top: 47px;
}

.scrollView {
  height: 100%;
}

.slide-image {
  width: 100%;
  height: 320px;
}

.swiperimg {
  height: 320px;
}

.img-1 {
  width: 15px;
  height: 90px;
}

.couponinfo {
  display: flex;
  flex-direction: row;
  border-radius: 3px;
  border: 1px white solid;
}

.view-1 {
  background-color: rgb(255, 33, 80);
  display: flex;
  flex-direction: column;
  width: 65%;
  justify-content: space-around;
  color: white;
  border-top-left-radius: 3px;
  border-bottom-left-radius: 3px;
  font-size: 17px;
  padding: 16px 0px;
  padding-left: 20px;
}

.view-2 {
  background-color: white;
  color: #999;
  font-size: 13px;
  display: flex;
  flex-direction: column;
  text-align: center;
  width: 35%;
  justify-content: space-around;
  padding: 16px 0px;
}
