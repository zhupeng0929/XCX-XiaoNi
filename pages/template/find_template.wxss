.find-container {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

.userimg {
  width: 100rpx;
  height: 100rpx;
  margin: 10rpx;
  border-radius: 100%;
}

.user_2 {
  display: flex;
  flex-direction: column;
  line-height: 50rpx;
  margin-top: 8rpx;
}

.username {
  font-size: 30rpx;
  font-weight: 600;
}

.usermotto {
  font-size: 12px;
  color: #999;
}

.time {
  font-size: 25rpx;
  color: #999;
  padding-right: 20rpx;
  padding-top: 30rpx;
}

.img_l_1 {
  width: 77%;
  height: 300rpx;
}

.img_l_2 {
  width: 100%;
  height: 300rpx;
}

.img_r {
  width: 146rpx;
  height: 146rpx;
  margin-left: 10rpx;
}

.content {
  font-size: 32rpx;
  font-weight: 600;
  margin-left: 20rpx;
  display: block;
  line-height: 40rpx;
  height: 40rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.image_icon {
  width: 16px;
  height: 16px;
  margin-right: 5px;
}

.view_icon {
  display: flex;
  justify-content: space-between;
  padding: 28rpx 0;
}

.view_icon_1 {
  display: flex;
  padding-left: 30rpx;
}

.view_icon_2 {
  display: flex;
  margin-right: 15px;
}

.icon_text {
  display: block;
  font-size: 12px;
  color: #8c8c8c;
}

.share_img {
  margin-right: 15px;
}

view {
  background-color: white;
  border-radius: 7px;
}
