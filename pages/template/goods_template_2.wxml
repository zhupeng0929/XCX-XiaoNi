    <view>
      <text class='goodsname text_0 ellipsis'>{{GoodsName}}</text>
    </view>
    <view>
      <text class='text_0 ellipsis' style='color:#999'>{{GoodsTitle}}</text>
    </view>
   
    <view style='display:flex;flex-direction: row;justify-content:space-between;margin-top:20rpx;'>
    <view>
      <text class='text_0'  style='color:#ff4200;'>¥<text class='text_price'>{{GoodsPrice}}</text></text></view>
