page{padding:90rpx 0 50px;}
.tabTit{height:90rpx;line-height: 90rpx;border-bottom: solid 1px #eee;border-top: solid 1px #eee;position:fixed;top:0;width: 750rpx;z-index: 1;
}
.tabTit .title{font-size: 13px; color: #666;font-weight: 500}
.tabTit .active{color:#000;}
.tabTit .active image{transform: rotate(0deg);}
.tabTit image{transform: rotate(180deg);width:26rpx;height:26rpx;vertical-align: middle;margin-left: 5px;background: none;}
.tabLayer{box-shadow: 0 5px 5px rgba(0,0,0,.15);width:750rpx;overflow: hidden;position: fixed;top:90rpx;z-index: 3;background: #fff;padding-bottom: 26rpx;border-bottom: solid 1px #eee;background-color:#f0f3f5;
}
.tabLayertext{width:210rpx;height:80rpx;line-height:80rpx;float:left;border: solid 1px #eee;margin:20rpx 0 0 26rpx;background-color:white;border-radius:10rpx;font-size:13px;
}
.tabLayerimage{width:150rpx;height:50rpx;line-height:50rpx;float:left;border: solid 1px #eee;margin:20rpx 0 0 26rpx;background-color:white;border-radius:10rpx;font-size:13px;
}
.b1{position:fixed;width:100%;height:100%;top:90rpx;background:rgba(0,0,0,0.4);overflow: hidden;z-index: 2}  
.tabLayer .active{color:white;background-color: #ff4200}
.case{height:640rpx;margin:30rpx auto 0;background: #fff;border:solid 1px #f1f1f1;overflow:hidden;}
.case .title{font-size: 33rpx;color:#000;margin-top: 5rpx;}
.case .title,.case .tag{padding:0 5rem 0 15px;}
.case .tag{font-size:28rpx;}
.case .pic{width:100%;height:510rpx;}
.case .headPic{right:10px;top:455rpx;}
.case .headPic image{width:100rpx;height:100rpx;border-radius: 50%;border:solid 6rpx #fff;}
.case .headPic text{display: block;font-size:28rpx;margin-top: -6rpx;}

.content{
  margin: 20rpx 20rpx;
  text-align: justify; 
}  
.item{
  background-color: #fff;

  margin-bottom: 20rpx;
  display: inline-block;
  width: 99%;
    border-radius: 14rpx;
}
.item-ava{
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
}
.heart{
  width: 30rpx;
  height: 26rpx;
  margin-right: 8rpx;
}
.heart_{
  display: flex;
  align-items: center;
}
.item-img{
  width: 100%;
    border-top-left-radius: 14rpx;
  border-top-right-radius: 14rpx;
}
.item-title{
  font-size: 24rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-family: 'PingFang SC-Medium';
  color: #666;

}
.item .name{
  display: flex;
  padding: 0 15rpx;
  margin-top: 20rpx;
  padding-bottom: 10rpx;
  align-items: center;
  font-size: 22rpx;
  color: #1e1e1e;
  font-family: 'PingFang SC-Medium';
}
.name image{
  flex: 0 0 30rpx;
}
.item-title-box{
  display: flex;
  position: relative;
  padding: 20rpx;
}
.name-title{
  flex: 1;
  margin-left: 18rpx;
  margin-right: 20rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.name text:last-child{
  flex: 0 0 30rpx;
  color: #c4c4c4;
  text-decoration: underline;
  line-height: 10rpx;
  
}
.left,.right{
  display: inline-block;
  vertical-align: top;
  width: 49%;
}
.right{
  float: right;
}